    "chai-as-promised": "^7.1.1",
    "codecov": "^3.1.0",
    "coveralls": "^3.0.2",
    "eslint": "^5.6.1",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0",
